<%- include('partials/header') -%>

<div class="grid grid-cols-3 gap-4 ml-5 mt-10 mb-10">
  <div class="card w-96 bg-secondary text-secondary-content">
    <div class="flex flex-column justify-content-between card-body items-center text-center">
      <h2 class="card-title">To-Dos</h2>
      <h3> You have <%= left %> things left to do today.</h2>
        <span class="">Click the task to mark complete and incomplete.</span>
        <ul>
            <% todos.forEach( el => { %>
                    <li class='todoItem' data-id='<%=el._id%>'>
                        <span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %></span>
                        <span><%=el.date%></span>
                        <span><%=el.time%></span>
                        <button class="fa-solid fa-trash-can del hover:text-base-100"></button>
                        <button class="fa-regular fa-pen-to-square update hover:text-base-100"></button>
                    </li>
            <% }) %>    
         </ul>
        <div class="card-actions mt-8">
          <button class="btn btn-neutral">All-Todos</button>
        </div>
    </div>
  </div>

  <div class="card w-96 bg-base-100 shadow-xl">
    <div class="card-body items-center text-center">
      <h2 class="card-title">Shoes!</h2>
      <p>If a dog chews shoes whose shoes does he choose?</p>
      <div class="card-actions">
        <button class="btn btn-secondary">Buy Now</button>
      </div>
    </div>
  </div>
  
      
  <div class="mt-5">
        <h2>Add a post</h2>
        <form action="/post/createPost" enctype="multipart/form-data" method="POST">
          <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" id="title" name="title">
          </div>
          <div class="mb-3">
            <label for="caption" class="form-label">Caption</label>
            <textarea class="form-control" id="caption" name="caption"></textarea>
          </div>
          <div class="mb-3">
            <label for="imgUpload" class="form-label">Image</label>
            <input type="file" class="form-control" id="imageUpload" name="file">
          </div>
          <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
        </form>
  </div>
</div>
<div class="mx-5">
  <div>
    <h3 class="text-center text-secondary-content text-2xl py-15">Inspiration</h3>
    <ul class="grid grid-cols-4 m-10">
      <% for(var i=0; i<posts.length; i++) {%>
        <li class="w-60 mb-8">
          <a href="/post/<%= posts[i]._id%>">
            <img src="<%= posts[i].image%>">
          </a>
        </li>
      <% } %>
      </ul>
  </div>
  <div class="flex justify-center my-5">
    <a class="btn btn-neutral" href="/feed">Get Inspiration</a>
  </div>  
</div>  
    

<%- include('partials/footer') -%>